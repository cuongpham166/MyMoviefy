<%- include ('../partials/header.ejs');  -%>


	<div class="form_container">
		<div class="form_btn">
			<a href="/login" id="btn_signin" class="btn--active">Sign in</a>
			<a href="/register" id="btn_signup">Sign up</a>
		</div>
		<div class="form_wrapper">
			<div class="form_main" id="form_signin">
				<form action="/login" method="POST">
					<label for="username" class="form_label">Username</label>
					<div class="input_container">
						<input class="form_input" type="text" style="border:none" name="username"  pattern=".{5,}" title="Five or more characters" required>
					</div>
					<label for="password" class="form_label">Password</label>
					<div class="input_container">
						<input class="form_input" type="password" id="form_password" style="border:none" name="password"  pattern=".{5,}" title="Five or more characters" required>
						<i class="fas fa-eye" id="btn_hide"></i>
					</div>
					<div class="forgot_container">
						<a href="/forgot" id="btn_forgot">Forgot Password ? </a>
					</div>
					<div class="submit_container">
						<input class="form_submit" type="submit" value="Sign In">	
					</div>		
				</form>
			</div>
			
			<div class="form_social">
				<h3 class="social_title">Connect with Social Media </h3>
				<div class="social_container">
					<form>
				 	<a href="/auth/facebook" class="social_btn btn_facebook">
				 		<i class="fab fa-facebook-f social_icon"></i>
				 		<span>Sign In With Facebook</span>
				 	</a>
				 	<a href="/auth/twitter" class="social_btn btn_twitter">
				 		<i class="fab fa-twitter social_icon"></i>
				 		<span>Sign In With Twitter</span>
				 	</a>
				 	<a href="/auth/google" class="social_btn btn_google">
				 		<i class="fab fa-google social_icon"></i>
				 		<span>Sign In With Google</span>
					 </a>
					</form>
				</div>
			</div>
		</div>
	</div>
<script type="text/javascript" src="/js/login.js"></script> 
