<%- include ('../partials/header.ejs');  -%>


<div class="homepage_container">
	<div class="homepage_slideshow">
		<div class="main-carousel-top">
			<% for(var i=0; i<7; i++) {%>
			<a href="/movie/<%=topSectionData[i].id%>" class="carousel-cell single">
				<div>
					<img src="https://image.tmdb.org/t/p/original/<%=topSectionData[i].backdrop_path%>" class="slideshow_img">
					<div class="img_overlay">
						<h1 class="overlay_text overlay_txt"><%=topSectionData[i].title%></h1>
					</div>
				</div>
			</a>
			<% } %>	
		</div>
	</div>


	<div class="homepage_wrapper">
		<div class="trending homepage_section">
			<div class="homepage_top">
				<span class="top_titel"><a href="/toprated/movie" target="_blank"><h1>Top Rated</h1></a></span>
			</div>
			<div class="homepage_subtext"><h3>Top rated TV shows and movies just for you</h3></div>

			<div class="main-carousel-toprated">
				<% for(var i=0; i<topratedmovData.length; i++) {%>
					<div class="carousel-cell">
						<a href="/movie/<%=topratedmovData[i].id%>">
							<div class="toprated_card">
								<img src="https://image.tmdb.org/t/p/w500/<%=topratedmovData[i].backdrop_path%>" class="toprated_img" alt="placeholder">
								<div class="card_section--bottom">
									<h4 class="toprated_card_title"><%=topratedmovData[i].title%></h4>
									<h4 class="toprated_card_score"><i class="fas fa-star"></i> <%=topratedmovData[i].vote_average%></h4> 
								</div>
							</div>
						</a>
					</div>
				<% } %>
			</div>

			
			<div class="homepage_list_container">
				<ul class="homepage_list">
					<li class="list_content" data-list-content="movie">Movie</li>
					<li class="list_content" data-list-content="tv">Shows</li>	
				</ul>
			</div>
		</div>







		<div class="trending homepage_section">
