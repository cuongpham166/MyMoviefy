<%- include ('../partials/header.ejs');  -%>


<div class="detail_info">
	<div class="info_wrapper detail_wrapper">
		<div class="info_img">
			<% if( detailCollectionData.poster_path != null){ %>
				<img src="https://image.tmdb.org/t/p/w500/<%=detailCollectionData.poster_path%>" alt="placeholder">
			<% } else{ %>
				<img src="https://dummyimage.com/150x250/ffffff/000000" alt="placeholder">
			<% } %>
		</div>
		<div class="info_text">
			<div class="info_paragraph">
				<h1 class="info_titel info_txt"><%=detailCollectionData.name%></h1>
				<h2 class="paragraph_titel info_txt">Overview</h2>
				<p class="paragraph_txt info_txt">
					<%=detailCollectionData.overview%>
				</p>
			</div>
		</div>
	</div>
</div>

	<div class="detail_wrapper">
		<div class="latest1">
		<% for(var i=0; i<detailCollectionData.parts.length; i++) {%>
			<div class="latest_card">
				<div class="latest_card_wrapper">
						<% if( detailCollectionData.parts[i]. poster_path == null ){ %>
							<img src="https://dummyimage.com/185x278/ffffff/000000" alt="placeholder">
						<% } else{ %>
							<img src="https://image.tmdb.org/t/p/w500/<%=detailCollectionData.parts[i]. poster_path%>" alt="placeholder">
						<% } %>
					<div class="latest_info">
						<h2 class="latest_card_titel"><%=detailCollectionData.parts[i].title%></h2>
						<h3 class="latest_card_date"><%=detailCollectionData.parts[i].release_date%></h3>
						<p class="latest_card_overview"><%=detailCollectionData.parts[i].overview%></p>						
						<a href="/movie/<%=detailCollectionData.parts[i].id%>" class="latest_card_more">More Info</a>
					</div>
				</div>
			</div>		
		<% } %>	
		</div>
	</div>


<%- include ('../partials/footer.ejs');  -%>