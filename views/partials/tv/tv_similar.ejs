	<% if( (detailtvData.similar).length != 0){ %>
		<div class="detail_recommend">
			<div class="homepage_top">
				<span class="top_titel"><h1>More Like This</h1></span>
			</div>
			<div class="main-carousel-similar">
				<% for(var i=0; i<(detailtvData.similar).length; i++) {%>
					<div class="carousel-cell">
						<a href="/tv/<%=detailtvData.similar[i].id%>">
							<% if( detailtvData.similar[i].poster_path != null ){ %>
								<img src="https://image.tmdb.org/t/p/w500/<%=detailtvData.similar[i].poster_path%>"  class="poster_movie" alt="placeholder">
							<% } else{ %>
								<img src="https://dummyimage.com/200x300/ffffff/000000" alt="placeholder">
							<% } %>
						</a>
					</div>
				<% } %>
			</div>
		</div>
	<% } %>